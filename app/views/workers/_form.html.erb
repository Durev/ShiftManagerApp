<%= form_for(@worker) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <h4>- First Name -</h4>
    <%= f.text_field :first_name, class: 'form-control', placeholder: "Doc" %>
  </div>

  <div class="form-group">
    <h4>- Status -</h4>

    <%= f.radio_button :status, "medic", checked: "checked" %>
    <%= f.label :status_medic, "Medic" %>

    <%= f.radio_button :status, "interne" %>
    <%= f.label :status_interne, "Interne" %>

    <%= f.radio_button :status, "interim" %>
    <%= f.label :status_interim, "Interim" %>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
